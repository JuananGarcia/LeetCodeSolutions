public class Solution {
    public int[] TwoSum(int[] numbers, int target) {
        int left = 0;
        int right = numbers.Length - 1;

        while (left < right){
            int suma = numbers[left] + numbers[right];

            if ( suma == target){
                return new int[left, right];
            }else if (suma > target) left++:
            else if (suma < target) right--;

        }

        return new int[0];
    }
}